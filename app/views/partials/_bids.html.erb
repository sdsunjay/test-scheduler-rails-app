
<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Something big</h1>
    <p><%= link_to "Sign Up To Bid", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<% if @bids.exists? %>
  <div class="col-sm-6 col-md-3">
    <% @bids.each do |bid| %>
      <div class="row-sm-6 row-md-3">
          <%= link_to bid.user.name, user_path(bid.user.id) %> <%= bid.amount %> <%= bid.created_at.strftime("%Y-%m-%d %H:%M") %></h3>
      </div>
    <% end %>
  </div>
<% else %>
<div class="col-xs-12">
    <article class="ride-box clearfix">
        <div class="ride-content">
            <h3>No bids yet</h3>
        </div>
    </article>
</div>
<% end %>
